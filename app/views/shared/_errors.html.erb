<div class="container">
  <% if obj.errors.any? %>
    <div class="row mb-3">
      <div class="col-12">
        <div class="card text-white">
          <h5 class="card-header bg-danger">Oops..!</h5>
          <div class="card-body" style="background-color: #ec5858e0">
            <h5 class="card-title">
              <%= pluralize(obj.errors.count, "error") %>
              prohibited this article from being saved:
            </h5>
            <p class="card-text">
              <ul>
                <% obj.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
