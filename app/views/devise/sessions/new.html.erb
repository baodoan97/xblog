<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-6 m-auto">
      <div class="sign-in text-center">
        <h2>Sign In</h2>
        <hr style="border: 0.5px solid #5c5353;">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, class:"float-left" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100 form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :password, class:"float-left" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class:"w-100 form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "Log in", class:"btn btn-success w-100" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
    