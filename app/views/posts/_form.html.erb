<%= render 'shared/errors', obj: @post %>
<div class="container">
	<%= form_for @post do |f| %>
		<div class="form-group ">
		    <%= f.label :title, class:"h4" %> <br/>
		    <%= f.text_field :title, class:"form-control", placeholder:"Enter title" %>
	    </div>
	    <div class="form-group">
		    <%= f.label :content, class:"h4" %> <br/>
		    <%= f.cktext_area :content, class:"form-control"%>
	    </div>
	    <%= f.submit class:"btn btn-success ml-auto" %>
	<% end %>
</div>